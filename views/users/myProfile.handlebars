<div class="container">
	<div class="row mb-5">
		<div class="col card mt-3 shadow">
			<div class="card-body">
				<div class="container mb-3">
					<h1 class="card-title h3">My Info</h1>
				</div>
				<div class="row">
					<div class="col">
						<div class="container row mb-3">
							<div class="col col-4">
								<label for="first-name" class="mr-3">First Name</label>
							</div>
							<div class="col">
								<input type="text" id="first-name" class="rounded p-1" placeholder="{{user.firstName}}" disabled />
							</div>
						</div>
						<div class="container row mb-3">
							<div class="col col-4">
								<label for="userName" class="mr-3">userName</label>
							</div>
							<div class="col">
								<input type="text" id="userName" class="rounded p-1" placeholder="{{user.userName}}" disabled />
							</div>
						</div>
						<div class="container row mb-3">
							<div class="col col-4">
								<label for="age">Age</label>
							</div>
							<div class="col">
								<input type="number" id="age" class="rounded p-1" placeholder="{{user.age}}" disabled />
							</div>
						</div>
					</div>
					<div class="col">
						<div class="container row mb-3">
							<div class="col col-4">
								<label for="last-name" class="mr-3">Last Name</label>
							</div>
							<div class="col">
								<input type="text" id="last-name" class="rounded p-1" placeholder="{{user.lastName}}" disabled />
							</div>
						</div>
						<div class="container row mb-3">
							<div class="col col-4">
								<label for="email">Email</label>
							</div>
							<div class="col">
								<input type="text" id="email" class="rounded p-1" placeholder="{{user.email}}" disabled />
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row mb-5">
		<div class="col col-6 card shadow mr-4">
			<div class="card-body">
				<div class="container">
					<h2 class="card-title h3">Owned Furnitures</h2>
				</div>
				<div class="container">
					{{#if (checkListLengthZero ownedFurnitures)}}
						<p class="font-italic"><a href="/furniture/new">None, go publish some furnitures!</a></p>
					{{else}}
						<ul class="list-group col-10 list-group-flush">
							{{#each ownedFurnitures}}
								<li class="list-group-item">
									<a href="/furniture/{{this._id}}"><span class="bold">&starf;</span>{{this.name}}</a>
									<div>likes: {{this.likes.length}}</div>
									<div>num_comments: {{this.num_comments}}</div>
								</li>
							{{/each}}
						</ul>
					{{/if}}
				</div>
			</div>
		</div>
		<div class="col card shadow">
			<div class="card-body">
				<div class="container">
					<h2 class="card-title h3">Owned Rental</h2>
				</div>
				<div class="container">
					{{#if (checkListLengthZero ownedRentals)}}
						<p class="font-italic"><a href="/rental/new">None, go publish some rentals!</a></p>
					{{else}}
						<ul class="list-group col-10 list-group-flush">
							{{#each ownedRentals}}
								<li class="list-group-item">
									<a href="/rental/{{this._id}}"><span class="bold">&starf;</span>{{this.name}}</a>
									<div>likes: {{this.likes.length}}</div>
									<div>num_comments: {{this.num_comments}}</div>
								</li>
							{{/each}}
						</ul>
					{{/if}}
				</div>
			</div>
		</div>
	</div>

	<div class="row mb-5">
		<div class="col col-6 card shadow mr-4">
			<div class="card-body">
				<div class="container">
					<h2 class="card-title h3">Favorited Furnitures</h2>
				</div>
				<div class="container">
					{{#if (checkListLengthZero favoritedFurnitures)}}
						<p class="font-italic"><a href="/furniture">None, go favorate some furnitures!</a></p>
					{{else}}
						<ul class="list-group col-10 list-group-flush">
							{{#each favoritedFurnitures}}
								<li class="list-group-item">
									<a href="/furniture/{{this._id}}"><span class="bold">&starf;</span>{{this.name}}</a>
									<div>likes: {{this.likes.length}}</div>
									<div>num_comments: {{this.num_comments}}</div>
								</li>
							{{/each}}
						</ul>
					{{/if}}
				</div>
			</div>
		</div>
		<div class="col card shadow">
			<div class="card-body">
				<div class="container">
					<h2 class="card-title h3">Favorited Rental</h2>
				</div>
				<div class="container">
					{{#if (checkListLengthZero favoritedRentals)}}
						<p class="font-italic"><a href="/rental">None, go favorate some rentals!</a></p>
					{{else}}
						<ul class="list-group col-10 list-group-flush">
							{{#each favoritedRentals}}
								<li class="list-group-item">
									<a href="/rental/{{this._id}}"><span class="bold">&starf;</span>{{this.name}}</a>
									<div>likes: {{this.likes.length}}</div>
									<div>num_comments: {{this.num_comments}}</div>
								</li>
							{{/each}}
						</ul>
					{{/if}}
				</div>
			</div>
		</div>
	</div>

	<div class="row mb-5">
		<div class="col card shadow">
			<div class="card-body">
				<div class="container">
					<h2 class="card-title h3">My Reviews History</h2>
				</div>
				<div class="container">
					<ul class="list-group list-group-flush">

						{{#each reviewHistory}}
							<li class="list-group-item borderless">
								<div class="card container mb-5">
									{{! <div class="card-header row"> }}
									<div class="col mt-2">
										<p class="bold" id="reviewText-{{@index}}">{{this.type}}: {{this.name}}</p>
										<p class="reviewTextInProfile"> {{this.text}} </p>
									</div>
									<div class="btnContainer col">
										<button
											class="btn btn-danger"
											type="button"
											data-toggle="modal"
											data-target="#review-{{@index}}"
											aria-hidden="true"
										>Delete</button>
									</div>

									<div class="modal" id="review-{{@index}}" role="dialog" tabindex="-1">
										<div class="modal-dialog">
											<div class="modal-content">
												<div class="modal-header">
													<h3 class="modal-title text-truncate">{{this.text}}"</h3>
													<button type="button" class="close" data-dismiss="modal" aria-label="Close">
														<span aria-hidden="true">&times;</span>
													</button>
												</div>
												<div class="modal-body">Are you sure you want to delete this review for
													{{this.type}}
													<span class="bold">{{this.name}}</span>?</div>
												<div class="modal-footer">
													<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
													<button
														type="button"
														class="btn btn-danger delbtn"
														data-id="{{this._id}}"
														data-type="{{this.type}}"
														data-comment_id="{{this.comment_id}}"
														data-dismiss="modal"
													>Delete</button>
												</div>
											</div>
										</div>
									</div>

								</div>
							</li>
						{{/each}}

					</ul>
				</div>
			</div>
		</div>
	</div>
</div>