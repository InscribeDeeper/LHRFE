<div class="container">
    <div class="row">
        <div class="col">
            <div class="mt-3">
                <a href="/rental">
                    
                    <span class="ml-1">Back</span>
                </a>
            </div>
            <div class="border-bottom mt-3">
                <h1 class="display-4 font-weight-bold">{{rental.location}} </h1>

                <span class = "error font-italic" hidden></span>
                <h2 id="address" class="font-italic h5">{{rental.description}}</h2>
                <h2 class="text-secondary h5">{{rental.utility}}</h2>
                
            </div>
            <div class="mt-3">
                <div class="row mb-4">
                    <div class="col-3">
                        <h3 class="font-weight-bold mb-4">Comments</h3>    
                    </div>
                    <div class="col">
                        <a href="/comments/addRentalComment/{{rental._id}}" class="btn btn-primary">Write a Review</a>
                    </div>
                </div>
                <ul class="list-group list-group-flush">
                    {{#each comments}}
                    <li class="list-group-item mb-4">
                        <div class="container">
                            <div class="row">
                                <div class="col col-4 p-0">
                                    <h4 class="font-weight-bold h5">{{this.name}}</h4>
                                    
                                </div>
                                
                            </div>
                            <div class="row mt-3">
                                <p class="text-left lead">
                                    <span>
                                        {{this.text}}
                                    </span>
                                </p>
                                <p class="commentt_id">this is comment_id: {{this._id}}</p>
                            </div>
                            <div class = "dblclick container">
                                {{#if (checkListMem ../user._id this.helpful)}}
                                <i class = "likebtn fa fa-thumbs-up filled" data-rid = "{{this.id}}" data-uid = "{{../user._id}}"></i>
                                {{else}}
                                <i class = "likebtn fa fa-thumbs-up" data-rid = "{{this.id}}" data-uid = "{{../user._id}}"></i>
                                {{/if}}
                                <span class = "likes">{{this.helpful.length}}</span>

                                
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col col-5 mt-5 ml-3">
            <div class="container p-3 border border-light rounded shadow-sm mb-5">
                <div class="row ml-3">
                    <h3 class="font-weight-bold"></h3>
                </div>
               
                <div class="row mt-3">
                    <div class="col col-8">
                        
                        <span class="ml-2">
                            Price
                        </span>
                    </div>
                    <div class="col">
                        <span>
                            
                            {{rental.price}}
                            
                        </span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col col-8">
                        
                        <span class="ml-2">
                            Bedrooms
                        </span>
                        
                    </div>
                    <div class="col">
                        <span id = "bedroom">
                            
                            {{rental.bedroom}}
                            
                        </span>
                    </div>
                </div>

                                <div class="row mt-3">
                    <div class="col col-8">
                       
                        <span class="ml-2">
                            Bathrooms
                        </span>
                        
                    </div>
                    <div class="col">
                        <span id = "distanced">
                            
                            {{rental.bathroom}}
                        </span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col col-8">
                            
                            <span class="ml-2">Contact</span>
                    </div>

                    <div class="col">
                        <span id = "masked">
               
                            {{rental.contact}}
                        </span>
                    </div>
                </div>
                

               
            <div class="container shadow-sm p-3 mb-5 border border-light rounded">
                <h3 class="font-weight-bold">Images</h3>
                {{#if photos}}
                    <div id="carouselExampleIndicators" class="carousel slide my-3" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            {{#each photos}}
                                <div class="carousel-item">
                                    <img src="{{this}}" class="d-block w-100 p-3" alt="img-{{@index}}">
                                </div>
                            {{/each}}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                {{else}}
                    <h4 class="h5 text-secondary">No images available...</h4>
                {{/if}}
            </div>
            <div id="map-parent" class="container shadow-sm p-3 border border-light rounded">
                <h3 class="font-weight-bold">Location</h3>
                <div id="map" class="container"></div>
            </div>
        </div>
    </div>
</div> 