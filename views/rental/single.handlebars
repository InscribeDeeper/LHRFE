<div class="container">
    <div class="row">
        <div class="col">
            <div class="mt-3">
                <a href="/rental">
                    
                    <span class="ml-1">Back</span>
                </a>
            </div>
            
            <div class="border-bottom mt-3">
                <h1 class="display-2 font-weight-bold">{{rental.location}} </h1>

                <span class = "error font-italic" hidden></span>
                <h2 id="address" class="display-5">{{rental.description}}</h2>
                <h2 id="bedbath" class="display-5">Unit Type: {{rental.bedroom}}B {{rental.bathroom}}B</h2>
                <h2 id="space" class="font-italic h5">Size: {{rental.space}} Sqrt</h2>
                <h2 id="space" class="font-italic h5">Utilities: {{rental.utility}}</h2>
            
                
            </div>
             <div class="container">
                <ul>
                    <li>Price: {{#if rental.price}}
                    {{rental.price}} Dollar / month
                    {{else}}
                    It is free
                    {{/if}}
                    </li>
                    
                    <li>Labels: {{rental.labels}}</li>
                    <li>Utilities: {{rental.utility}}</li>
                    <li>Contact: {{rental.contact}}</li>
                </ul>
                <div class="container shadow-sm p-3 mb-5 border border-light rounded">
                <h4 class="font-weight-bold">Images</h4>
                {{#if rental.photo_link}}
                    <img src={{rental.photo_link}} alt={{rental.location}} width="300" height="300">
                {{else}}
                    <h4 class="h5 text-secondary">No images available...</h4>
                {{/if}}
            </div>


                
            </div>
            

            <div>
                <div id="map-parent" class="container shadow-sm p-3 border border-light rounded">
                <h3 class="font-weight-bold">Location</h3>
                <div id="map" class="container"></div>
            </div>
            
            <div class="mt-3">
                <div class="row mb-4">
                    <div class="col-3">
                        <h3 class="font-weight-bold mb-4">Comments</h3>    
                    </div>
                    <div class="col">
                        <a href="/comments/addRentalComment/{{rental._id}}" class="btn btn-primary">Write a Review</a>
                    </div>
                </div>

            
                <ul class="list-group list-group-flush">
                    {{#each comments}}
                    <li class="list-group-item mb-4">
                        <div class="container">
                            <div class="row">
                                <div class="col col-4 p-0">
                                    <h4 class="font-weight-bold h5">{{this.name}}</h4>
                                    
                                </div>
                                
                            </div>
                            <div class="row mt-3">
                                <p class="text-left lead">
                                    <span>
                                        {{this.text}}
                                    </span>
                                </p>
                                <p class="commentt_id">this is comment_id: {{this._id}}</p>
                            </div>
                            <div class = "dblclick container">
                                {{#if (checkListMem ../user._id this.helpful)}}
                                <i class = "likebtn fa fa-thumbs-up filled" data-rid = "{{this.id}}" data-uid = "{{../user._id}}"></i>
                                {{else}}
                                <i class = "likebtn fa fa-thumbs-up" data-rid = "{{this.id}}" data-uid = "{{../user._id}}"></i>
                                {{/if}}
                                <span class = "likes">{{this.helpful.length}}</span>

                                
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        
            
                
                

               
           
            
        </div>
    </div>
</div> 