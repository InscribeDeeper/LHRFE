{{!-- 需要具备筛选功能 --}}

<div class="container m-5">
    <div class="row mb-4">
        <div class="col">
            <a href="/rental/new" class="btn btn-primary ">Create a new rental</a>
        </div>
    </div>

    <div class="row">
        <div class="col col-4">
            <label for="myInput"></label>
            <input type="text" class="form-control" id="myInput" onkeyup="fName('myInput',0)" placeholder="Search Rental Location">
        </div>
           
    </div>

    <div class="row">
        <div class="col col-4">
            <div class="rating-slider w-100"><label for="bedn" class="font-weight-bold">BEDROOM <span id="bedd" class="ml-2"></span></label></div>
            <input value="6" min="1" max="6" step="1" type="range" id="bedn" onmouseup="fNum('bedn',2,(a,b)=>a==b)" onkeyup="fNum('bedn',2,(a,b)=>a==b">
        </div>
       
        <div class="col col-4">
            <div class="rating-slider w-100"><label for="bathn" class="font-weight-bold">BATHROOM <span id="bathd" class="ml-2"></span></label></div>
            <input value="6" min="1" max="6" step="1" type="range" id="bathn" onmouseup="fNum('bathn',3,(a,b)=>a==b)" onkeyup="fNum('bathn',3,(a,b)=>a==b">
        </div>    

        <div class="col col-4">
            <div class="rating-slider w-100"><label for="pn" class="font-weight-bold">PRICE BELOW<span id="pd" class="ml-2"></span></label></div>
            <input value="10000" min="0" max="100000" step="100" type="range" id="pn" onmouseup="fNum('pn',1,(a,b)=>a<=b)" onkeyup="fNum('pn',1,(a,b)=>a<=b">
        </div>  
    </div>

    <div class="row">
        
    </div>

    





    
</div>

<div class="container m-5">
    <table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">Location</th>
            <th scope="col">Price</th>
            <th scope="col">Bed</th>
            <th scope="col">Bath</th>
            <th scope="col">Likes</th>
            <th scope="col">Photos</th>
            
        </tr>
    </thead>
    <tbody>
        {{#each rental}}
      
        <tr class="clickable-row" id="{{this._id}}" data-href="/rental/{{this._id}}">
            
            <td>{{this.location}}</td>
            <td>{{this.price}}</td>
            <td>{{this.bedroom}}</td>
            <td>{{this.bathroom}}</td>
            <td>{{this.likes}}</td>
            <td>{{this.photo_link}}</td>
            
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
<div class="container m-5" id="no-result" hidden="">
    <p><span class="fa fa-exclamation-circle">&#0160;</span>No results found</p>
</div>